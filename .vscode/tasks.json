{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install WhisperX",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/launcher/install_whisperx.ps1",
        "-ConfigPath", "${workspaceFolder}/config"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Install WhisperX (Debug)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/launcher/install_whisperx.ps1",
        "-ConfigPath", "${workspaceFolder}/config",
        "-Debug"
      ],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Uninstall WhisperX",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/launcher/uninstall_whisperx.ps1",
        "-ConfigPath", "${workspaceFolder}/config"
      ],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Uninstall WhisperX (Debug)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/launcher/uninstall_whisperx.ps1",
        "-ConfigPath", "${workspaceFolder}/config",
        "-Debug"
      ],
      "group": "none",
      "problemMatcher": []
    }
  ]
}
